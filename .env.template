# Artifactory Configuration
# OpenSSL Tools Environment Configuration
# Update these values with your actual Artifactory credentials

# Artifactory Configuration
ARTIFACTORY_URL=https://sparesparrow.jfrog.io/artifactory/api/conan/openssl-tools-conan
ARTIFACTORY_REPO=openssl-tools-conan
ARTIFACTORY_USER=dallheimal@gmail.com


# Build Configuration
DEFAULT_BUILD_PLATFORMS=ubuntu-20.04-gcc,ubuntu-22.04-clang,windows-2022,macos-x86_64,macos-arm64
ENABLE_CONAN_UPLOAD=true
ENABLE_GITHUB_PACKAGES=true

# Development Configuration
DEVELOPMENT_MODE=true
VERBOSE_LOGGING=true

# Docker Configuration
DOCKER_BUILDKIT=1
DOCKER_CLI_EXPERIMENTAL=enabled

# Conan Configuration
CONAN_USER_HOME=~/.conan2
CONAN_DEFAULT_PROFILE_PATH=profiles/conan/ubuntu-22.04.profile


# Local Runner Configuration
RUNNER_VERSION=2.314.1
LOCAL_RUNNER_LABELS=ubuntu-local,windows-local,macos-local
RUNNER_AUTO_START=false
RUNNER_WORK_DIR=./runner-work

# Build Configuration for Local Runners
LOCAL_BUILD_PLATFORMS=ubuntu-22.04-gcc,ubuntu-22.04-clang,windows-2022,macos-x86_64,macos-arm64
ENABLE_LOCAL_UPLOAD=true

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=openssl_builds
POSTGRES_USER=openssl_admin
POSTGRES_PASSWORD=openssl_secure_pass

ARTIFACTORY_TOKEN=$ARTIFACTORY_TOKEN
GITHUB_TOKEN=$GITHUB_TOKEN
