  "compilers": [
    {
      "name": "gcc",
      "conan_compiler": "gcc",
      "versions": [
        "default"
      ],
      "platforms": [
        "Linux",
        "FreeBSD"
      ]
    },
    {
      "name": "clang",
      "conan_compiler": "clang",
      "versions": [
        "default"
      ],
      "platforms": [
        "Linux",
        "Macos"
      ]
    }
  ],
  "build_types": [
    {
      "name": "Release",
      "conan_build_type": "Release",
      "cmake_build_type": "Release"
    },
    {
      "name": "Debug",
      "conan_build_type": "Debug",
      "cmake_build_type": "Debug",
      "config_flags": [
        "--debug"
      ]
    }
  ],
  "configurations": [
    {
      "job_name": "basic_gcc",
      "compiler": "gcc",
      "build_type": "Release",
      "options": {
        "fips": true,
        "shared": true,
        "demos": true,
        "h3demo": true,
        "sslkeylog": true,
        "quic": true
      },
      "config_line": "CC=gcc ./config --strict-warnings enable-demos enable-h3demo enable-sslkeylog enable-fips enable-quic"
    },
    {
      "job_name": "basic_clang",
      "compiler": "clang",
      "build_type": "Release",
      "options": {
        "fips": false,
        "shared": true,
        "demos": true,
        "h3demo": true
      },
      "config_line": "CC=clang ./config --strict-warnings enable-demos enable-h3demo no-fips"
    },
    {
      "job_name": "linux-arm64",
      "compiler": "gcc",
      "arch": "armv8",
      "build_type": "Release",
      "options": {
        "fips": true,
        "shared": true,
        "demos": true,
        "ec_nistp_64_gcc_128": true,
        "md2": true,
        "rc5": true,
        "ssl3": true,
        "ssl3_method": true,
        "trace": true
      },
      "config_line": "./config --strict-warnings enable-demos enable-fips enable-ec_nistp_64_gcc_128 enable-md2 enable-rc5 enable-ssl3 enable-ssl3-method enable-trace"
    },
    {
      "job_name": "minimal",
      "compiler": "gcc",
      "build_type": "Release",
      "options": {
        "fips": false,
        "shared": true,
        "demos": true,
        "h3demo": true,
        "bulk": false,
        "pic": false,
        "asm": false,
        "secure_memory": false,
        "small_footprint": true
      },
      "config_line": "./config --strict-warnings enable-demos enable-h3demo no-bulk no-pic no-asm -DOPENSSL_NO_SECURE_MEMORY -DOPENSSL_SMALL_FOOTPRINT"
    },
    {
      "job_name": "no-deprecated",
      "compiler": "gcc",
      "build_type": "Release",
      "options": {
        "fips": true,
        "shared": true,
        "demos": true,
        "h3demo": true,
        "deprecated": false
      },
      "config_line": "./config --strict-warnings enable-demos enable-h3demo no-deprecated enable-fips"
    },
    {
      "job_name": "no-shared-ubuntu",
      "compiler": "gcc",
      "build_type": "Release",
      "options": {
        "fips": false,
        "shared": false,
        "demos": true,
        "h3demo": true
      },
      "config_line": "./config --strict-warnings enable-demos enable-h3demo no-shared no-fips"
    },
    {
      "job_name": "address_ub_sanitizer",
      "compiler": "gcc",
      "build_type": "Debug",
      "options": {
        "fips": true,
        "shared": true,
        "demos": true,
        "h3demo": true,
        "asan": true,
        "ubsan": true,
        "rc5": true,
        "md2": true,
        "ec_nistp_64_gcc_128": true
      },
      "config_line": "./config --strict-warnings --debug enable-demos enable-h3demo enable-asan enable-ubsan enable-rc5 enable-md2 enable-ec_nistp_64_gcc_128 enable-fips"
    },
    {
      "job_name": "memory_sanitizer",
      "compiler": "clang",
      "build_type": "Debug",
      "options": {
        "fips": true,
        "shared": false,
        "msan": true,
        "rc5": true,
        "md2": true,
        "ec_nistp_64_gcc_128": true
      },
      "cflags": "-O1 -fsanitize=memory -DOSSL_SANITIZE_MEMORY -fno-optimize-sibling-calls",
      "config_line": "CC=clang ./config --strict-warnings --debug no-shared -O1 -fsanitize=memory -DOSSL_SANITIZE_MEMORY -fno-optimize-sibling-calls enable-rc5 enable-md2 enable-ec_nistp_64_gcc_128 enable-fips no-slh-dsa"
    },
    {
      "job_name": "threads_sanitizer",
      "compiler": "clang",
      "build_type": "Debug",
      "options": {
        "fips": false,
        "shared": false,
        "tsan": true
      },
      "cflags": "-g -fsanitize=thread",
      "config_line": "CC=clang ./config --strict-warnings no-shared no-fips -g -fsanitize=thread"
    },
    {
      "job_name": "full_featured",
      "compiler": "gcc",
      "build_type": "Release",
      "options": {
        "fips": true,
        "shared": true,
        "demos": true,
        "h3demo": true,
        "ktls": true,
        "egd": true,
        "ec_nistp_64_gcc_128": true,
        "md2": true,
        "rc5": true,
        "sctp": true,
        "ssl3": true,
        "ssl3_method": true,
        "weak_ssl_ciphers": true,
        "trace": true,
        "zlib": true,
        "zstd": true
      },
      "config_line": "./config --strict-warnings enable-demos enable-h3demo enable-ktls enable-fips enable-egd enable-ec_nistp_64_gcc_128 enable-md2 enable-rc5 enable-sctp enable-ssl3 enable-ssl3-method enable-weak-ssl-ciphers enable-trace enable-zlib enable-zstd"
    },
    {
      "job_name": "no-legacy",
      "compiler": "gcc",
      "build_type": "Release",
      "options": {
        "fips": true,
        "shared": true,
        "demos": true,
        "h3demo": true,
        "legacy": false
      },
      "config_line": "./config --strict-warnings enable-demos enable-h3demo no-legacy enable-fips"
    },
    {
      "job_name": "legacy",
      "compiler": "gcc",
      "build_type": "Debug",
      "options": {
        "fips": false,
        "shared": false,
        "demos": true,
        "h3demo": true,
        "crypto_mdebug": true,
        "rc5": true,
        "md2": true,
        "ssl3": true,
        "ssl3_method": true,
        "weak_ssl_ciphers": true,
        "zlib": true,
        "ec_nistp_64_gcc_128": true,
        "afalgeng": false
      },
      "config_line": "./config --strict-warnings --debug no-afalgeng enable-demos enable-h3demo no-shared enable-crypto-mdebug enable-rc5 enable-md2 enable-ssl3 enable-ssl3-method enable-weak-ssl-ciphers enable-zlib enable-ec_nistp_64_gcc_128 no-fips"
    }
  ]
}