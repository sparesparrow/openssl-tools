{
  "name": "github-workflow-fixer",
  "version": "1.0.0",
  "description": "MCP server for analyzing and fixing GitHub workflow issues",
  "server": {
    "command": "python",
    "args": ["github_workflow_fixer_mcp.py"],
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "capabilities": {
    "tools": [
      "analyze_repository_workflows",
      "get_workflow_status",
      "fix_workflow_issues", 
      "rerun_failed_workflows"
    ],
    "resources": [
      "workflow://status/{repository}"
    ],
    "prompts": [
      "workflow_troubleshooting_guide"
    ]
  },
  "security": {
    "required_env_vars": ["GITHUB_TOKEN"],
    "rate_limits": {
      "requests_per_minute": 60,
      "requests_per_hour": 5000
    }
  }
}