{
  "model": "auto",
  "temperature": 0.2,
  "maxTokens": 8192,
  "timeout": 60000,
  "outputFormat": "json",
  "force": true,
  "printResult": true,
  "stream": true,
  "mcp": {
    "enabled": false,
    "servers": [
      "github",
      "openssl-ci",
      "openssl-database", 
      "openssl-build",
      "openssl-security"
    ],
    "timeout": 5000
  },
  "context": {
    "includeGitHistory": true,
    "maxCommits": 15,
    "includePrInfo": true,
    "includeWorkflowRuns": true,
    "rulesDirectories": [
      ".cursor/rules"
    ]
  },
  "ciRepair": {
    "maxBatchActions": 5,
    "requireConfirmation": false,
    "autoCommit": true,
    "commitMessagePrefix": "ci(auto-fix):",
    "allowedActions": [
      "rerun",
      "approve", 
      "apply-patch",
      "enable-workflow",
      "disable-workflow",
      "rerun-failed-workflows"
    ]
  }
}

